@model IEnumerable<TeleBase.Models.Command>

<h1>Comand</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var command in Model)
        {
            <tr>
                <td>@command.Id</td>
                <td>@command.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@command.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@command.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New</a>
