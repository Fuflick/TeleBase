@model IEnumerable<TeleBase.Models.UserChat>

<h1>UserChats</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Chat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userChat in Model)
        {
            <tr>
                <td>@userChat.Id</td>
                <td>@userChat.UserId</td>
                <td>@userChat.ChatId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@userChat.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@userChat.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
