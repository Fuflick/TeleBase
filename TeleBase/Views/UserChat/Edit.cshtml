@model TeleBase.Models.UserChat

<h1>Edit UserChat</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserId" class="control-label">User</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserList"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChatId" class="control-label">Chat</label>
        <select asp-for="ChatId" class="form-control" asp-items="ViewBag.ChatList"></select>
        <span asp-validation-for="ChatId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
